<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <!-- TODO View does not apply initial values and not show existing ones  -->
    <record id="view_exchange_configuration" model="ir.ui.view">
        <field name="name">exchange.configuration</field>
        <field name="model">exchange.config.settings</field>
        <field name="arch" type="xml">
            <form string="Configure Exchange" class="oe_form_configuration">
                <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        <button string="Cancel" type="object" name="cancel" class="oe_link" special="cancel"/>
                </header>

                <group string="Exchange Identity" name="identity_grp">
                    <label for="id" string="Exchange Identity"/>
                    <div name="identity">
                        <div>
                            <label for="name"/>
                            <field name="name" class="oe_inline"/>
                        </div>
                        <div>
                            <label for="company_id"/>
                            <field name="company_id"  class="oe_inline"/>
                        </div>
                    </div>
                </group>
                <group string="Exchange Settings" name="exchange_grp">
                    <label for="id" string="Exchange Settings"/>
                    <div name="ex_setting">
                        <div>
                            <label for="ref_currency_id"/>
                            <field name="ref_currency_id" class="oe_inline"/>
                        </div>
                        <div>
                            <label for="journal_id"/>
                            <field name="journal_id" class="oe_inline"/>
                        </div>
                    </div>
                </group>
                <group string="Extra Modules Installation" name="module_grp">
                    <label for="id" string="Modules"/>
                    <div name="module_install">
                        <div>
                            <field name="module_exchange_membership" class="oe_inline"/>
                            <label for="module_exchange_membership"/>
                        </div>
                        <div>
                            <field name="module_exchange_loan" class="oe_inline"/>
                            <label for="module_exchange_loan"/>
                        </div>
                    </div>
                </group>
            </form>
        </field>
    </record>

    <record id="action_exchange_configuration" model="ir.actions.act_window">
        <field name="name">Exchange Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">exchange.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>
    <!--
        <record id="action_account_config" model="ir.actions.act_window">
            <field name="name">Configure Accounting</field>
            <field name="type">ir.actions.act_window</field>
        <field name="view_id" ref="view_exchange_configuration"/>
            <field name="res_model">account.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>
    -->

    <!-- Adding Exchange Currency Boolean to Currencies -->
    <record id="form_exchange_currency_view_inherited" model="ir.ui.view">
        <field name="name">res.currency.view.inherit</field>
        <field name="model">res.currency</field>
        <field name="inherit_id" ref="base.view_currency_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='rate']" position="after">
                <field name="exchange_currency"/>
            </xpath>
        </field>
    </record>

    <!-- Account Exchange Configuration Menu Items -->
    <menuitem id="menu_account_exchange_config" name="Exchanges" parent="account.menu_finance_configuration"
              sequence="2" groups="group_exchange_admin"/>

    <menuitem id="menu_exchange_admin_configuration" name="Settings" parent="menu_account_exchange_config"
              sequence="16" action="action_exchange_configuration" groups="group_exchange_admin"/>
    </data>
</odoo>
